<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity"
    android:orientation="vertical"
    android:background="@drawable/bg_1">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold|italic" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/register_username_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:background="@drawable/half_round"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/ic_call_black_24dp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/login_user_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:layout_toEndOf="@id/register_username_icon"
            android:background="@drawable/et_style"
            android:backgroundTint="@color/white"
            android:hint="UserName"
            android:textAlignment="textStart"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/registeration_user_password_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:background="@drawable/half_round"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/ic_lock_black_24dp" />



        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/login_user_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:layout_toEndOf="@id/registeration_user_password_icon"
            android:background="@drawable/et_style"
            android:backgroundTint="@color/white"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:textAlignment="textStart"
            android:textSize="20sp"/>


    </RelativeLayout>


    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="20sp"
        android:padding="10dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/colorPrimary" />


    <TextView
        android:id="@+id/go_to_registration_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an Account"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="right"
        android:textColor="@color/yellow"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <ProgressBar
        android:id="@+id/login_progress_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:visibility="gone"
        android:backgroundTint="@color/white"/>


</LinearLayout>